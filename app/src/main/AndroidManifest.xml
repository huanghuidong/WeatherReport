<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.huanghuidong.weatherreport">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true">
        <activity android:name="com.example.huanghuidong.weatherreport.activity.ChooseAreaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.huanghuidong.weatherreport.activity.WeatherActivity"></activity>
        <service android:name="com.example.huanghuidong.weatherreport.service.AutoUpdateService"></service>
        <receiver android:name="com.example.huanghuidong.weatherreport.receiver.AutoUpdateReceiver"></receiver>
    </application>

</manifest>
